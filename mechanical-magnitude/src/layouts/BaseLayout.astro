---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Czech Freelance Association" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary-theme shadow-sm">
			<div class="container">
				<a class="navbar-brand fw-bold" href="/">Czech Freelance Platform</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Přepnout navigaci">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" href="/">Domů</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/news">Aktuality</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/questions">Dotazy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/stories">Vaše příběhy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/about">O nás</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer class="bg-primary-theme py-5 mt-5">
			<div class="container">
				<div class="row">
					<div class="col-md-6 mb-4 mb-md-0">
						<h5 class="fw-bold">Czech Freelance Association</h5>
						<p>Dáváme prostor hlasu freelancerů.</p>
					</div>
					<div class="col-md-3 mb-4 mb-md-0">
						<h5 class="fw-bold">Kontakt</h5>
						<ul class="list-unstyled">
							<li>Email: <a href="mailto:info@freelance.cz" class="text-white text-decoration-none">info@freelance.cz</a></li>
							<li>Telefon: <a href="tel:+420123456789" class="text-white text-decoration-none">+420 123 456 789</a></li>
						</ul>
					</div>
					<div class="col-md-3">
						<h5 class="fw-bold">Sledujte nás</h5>
						<ul class="list-unstyled">
							<li><a href="#" class="text-white text-decoration-none">Linkedin</a></li>
							<li><a href="#" class="text-white text-decoration-none">Facebook</a></li>
						</ul>
					</div>
				</div>
				<hr class="my-4 bg-white opacity-25">
				<div class="text-center">
					<p class="mb-0">&copy; 2025 Czech Freelance Association. Všechna práva vyhrazena.</p>
				</div>
			</div>
		</footer>

		<script>
			import 'bootstrap/dist/js/bootstrap.bundle.min.js';
		</script>
	</body>
</html>