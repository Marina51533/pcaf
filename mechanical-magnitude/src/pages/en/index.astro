---
import BaseLayout from '../../layouts/BaseLayout.astro';
const title = 'Home | Czech Freelance Platform';
---

<BaseLayout title={title}>
	<section class="hero-slider">
		<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			<div class="carousel-inner">
				<!-- Slide 1 -->
				<div class="carousel-item active" style="background-image: url('/img/background.jpg');">
					<div class="carousel-overlay">
						<div class="carousel-caption-custom">
							<h1 class="display-4 fw-bold mb-4">Giving a Voice to Freelancers</h1>
							<p class="lead mb-4">Legislative changes affecting freelance work often arise without direct experience from the people they impact. In practice, they bring uncertainty and unclear rules.</p>
							<a href="#" class="btn btn-secondary-theme btn-lg">Join us</a>
						</div>
					</div>
				</div>
				<!-- Slide 2 -->
				<div class="carousel-item" style="background-image: url('/img/background.jpg');">
					<div class="carousel-overlay">
						<div class="carousel-caption-custom">
							<h1 class="display-4 fw-bold mb-4">Freelancers Have the Right to Be Heard.</h1>
							<p class="lead mb-4">We want to contribute to factual and professional debate on laws and regulations and highlight their real impact on freelance work in Czechia.</p>
							<a href="#" class="btn btn-secondary-theme btn-lg">Join us</a>
						</div>
					</div>
				</div>
				<!-- Slide 3 -->
				<div class="carousel-item" style="background-image: url('/img/background.jpg');">
					<div class="carousel-overlay">
						<div class="carousel-caption-custom">
							<h1 class="display-4 fw-bold mb-4">Join Us, Together We Are Heard!</h1>
							<p class="lead mb-4">Become part of a community that actively influences the future of business in Czechia.</p>
							<a href="#" class="btn btn-secondary-theme btn-lg">Join us</a>
						</div>
					</div>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>

	<section class="py-5 my-5">
		<div class="container">
			<h2 class="text-center mb-5 fw-bold section-title">Goals</h2>
			<div class="row justify-content-center">
				<div class="col-lg-11">
					<div class="row text-center g-4">
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-sm bg-highlight-theme p-4 p-md-5 goal-card">
								<div class="card-body d-flex flex-column justify-content-center py-4 py-md-5">
									<i class="bi bi-megaphone text-primary-theme mb-4 d-block goal-icon" aria-hidden="true"></i>
									<p class="card-text fw-bold goal-text">The voice of freelancers is heard in the debate on legislative changes.</p>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-sm bg-accent-theme p-4 p-md-5 goal-card">
								<div class="card-body d-flex flex-column justify-content-center py-4 py-md-5">
									<i class="bi bi-shield-check text-primary-theme mb-4 d-block goal-icon" aria-hidden="true"></i>
									<p class="card-text fw-bold goal-text">Rules for freelance work are clear and predictable.</p>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-sm bg-highlight-theme p-4 p-md-5 goal-card">
								<div class="card-body d-flex flex-column justify-content-center py-4 py-md-5">
									<i class="bi bi-people text-primary-theme mb-4 d-block goal-icon" aria-hidden="true"></i>
									<p class="card-text fw-bold goal-text">Decisions about freelancers are not made without their involvement.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="bg-accent-theme overflow-hidden section-problems">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-12 text-center">
					<h2 class="text-primary-theme mb-5 display-4 fw-bold animate-fade-in-up">Problems We Solve</h2>
					<div class="row g-5 text-start justify-content-center">
						<div class="col-md-4 animate-fade-in-up delay-1">
							<div class="p-2 h-100 d-flex align-items-center problem-item">
								<span class="fw-bold text-primary-theme me-4 problem-number">1</span>
								<p class="mb-0 fw-bold problem-text">Unclear legislation and frequent rule changes</p>
							</div>
						</div>
						<div class="col-md-4 animate-fade-in-up delay-2">
							<div class="p-2 h-100 d-flex align-items-center problem-item">
								<span class="fw-bold text-primary-theme me-4 problem-number">2</span>
								<p class="mb-0 fw-bold problem-text">Uncertainty regarding the status of freelancers</p>
							</div>
						</div>
						<div class="col-md-4 animate-fade-in-up delay-3">
							<div class="p-2 h-100 d-flex align-items-center problem-item">
								<span class="fw-bold text-primary-theme me-4 problem-number">3</span>
								<p class="mb-0 fw-bold problem-text">Lack of real data and practical experience in legislative debate</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section-problems overflow-hidden">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<h2 class="text-primary-theme text-center mb-5 display-4 fw-bold animate-fade-in-up">How We Do It</h2>
					<div class="row g-5">
						<div class="col-md-6 col-lg-4 animate-fade-in-up delay-1">
							<div class="d-flex align-items-start how-to-item">
								<div class="bg-accent-theme p-3 rounded me-4">
									<i class="bi bi-eye text-primary-theme fs-2" aria-hidden="true"></i>
								</div>
								<div>
									<p class="mb-0 fw-bold how-to-text">We monitor proposed laws and changes</p>
								</div>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 animate-fade-in-up delay-2">
							<div class="d-flex align-items-start how-to-item">
								<div class="bg-accent-theme p-3 rounded me-4">
									<i class="bi bi-journal-text text-primary-theme fs-2" aria-hidden="true"></i>
								</div>
								<div>
									<p class="mb-0 fw-bold how-to-text">We publish expert comments and articles</p>
								</div>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 animate-fade-in-up delay-3">
							<div class="d-flex align-items-start how-to-item">
								<div class="bg-accent-theme p-3 rounded me-4">
									<i class="bi bi-broadcast text-primary-theme fs-2" aria-hidden="true"></i>
								</div>
								<div>
									<p class="mb-0 fw-bold how-to-text">We cooperate with the media</p>
								</div>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 animate-fade-in-up delay-1">
							<div class="d-flex align-items-start how-to-item">
								<div class="bg-accent-theme p-3 rounded me-4">
									<i class="bi bi-database-add text-primary-theme fs-2" aria-hidden="true"></i>
								</div>
								<div>
									<p class="mb-0 fw-bold how-to-text">We collect practical experience from freelancers</p>
								</div>
							</div>
						</div>
						<div class="col-md-6 col-lg-4 animate-fade-in-up delay-2">
							<div class="d-flex align-items-start how-to-item">
								<div class="bg-accent-theme p-3 rounded me-4">
									<i class="bi bi-chat-dots text-primary-theme fs-2" aria-hidden="true"></i>
								</div>
								<div>
									<p class="mb-0 fw-bold how-to-text">We contribute to public and professional discussion</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section-problems bg-highlight-theme overflow-hidden">
		<div class="container">
			<h2 class="text-center mb-5 text-primary-theme display-4 fw-bold">Freelancers in Numbers</h2>
			<div class="row justify-content-center">
				<div class="col-lg-8">
					<div class="d-flex flex-column gap-5">
						<!-- Stat 1 -->
						<div class="stat-box d-flex align-items-center">
							<div class="stat-number-wrapper me-5">
								<span class="stat-number display-1 fw-bold text-primary-theme">1,100,000</span>
								<span class="display-1 fw-bold text-primary-theme animate-pulse ms-2">+</span>
							</div>
							<p class="mb-0 fw-bold fs-2">Total number of freelancers in Czechia</p>
						</div>
						<!-- Stat 2 -->
						<div class="stat-box d-flex align-items-center">
							<div class="stat-number-wrapper me-5">
								<span class="stat-number display-1 fw-bold text-primary-theme">700,000</span>
							</div>
							<p class="mb-0 fw-bold fs-2">Freelancing as main activity</p>
						</div>
						<!-- Stat 3 -->
						<div class="stat-box d-flex align-items-center">
							<div class="stat-number-wrapper me-5">
								<span class="stat-number display-1 fw-bold text-primary-theme">480,000</span>
							</div>
							<p class="mb-0 fw-bold fs-2">Freelancing as side activity</p>
						</div>
						<!-- Stat 4 -->
						<div class="stat-box d-flex align-items-center">
							<div class="stat-number-wrapper me-5">
								<span class="stat-number display-1 fw-bold text-primary-theme">15</span>
								<span class="display-1 fw-bold text-primary-theme">%</span>
							</div>
							<p class="mb-0 fw-bold fs-2">Share in the Czech labor market</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="py-5 bg-white">
		<div class="container">
			<h2 class="text-center mb-4 text-primary-theme">News</h2>
			<p class="text-center mb-5">Latest 10 updates from our website</p>
			<div class="row g-4">
				{[...Array(3)].map((_, i) => (
					<div class="col-md-4">
						<div class="card h-100 shadow-sm">
							<div class="card-body">
								<h5 class="card-title text-primary-theme">News {i + 1}</h5>
								<p class="card-text">Short description of the update concerning freelancers in the Czech Republic.</p>
								<a href="/en/news" class="btn btn-outline-primary btn-sm" aria-label={`Read more about News ${i + 1}`}>Read more</a>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

</BaseLayout>
