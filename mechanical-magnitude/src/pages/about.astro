---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = 'O nás | Czech Freelance Platform';

const faqs = [
	{ q: 'Kdo jsme?', a: 'Jsme nezávislá platforma zastupující zájmy freelancerů v České republice.' },
	{ q: 'Jak se stát členem?', a: 'Stačí vyplnit registrační formulář na hlavní stránce a zaplatit roční příspěvek.' },
	{ q: 'Co nabízíme?', a: 'Právní poradenství, networking, vzdělávání a zastupování v legislativním procesu.' },
];
---

<BaseLayout title={title}>
	<section class="py-5">
		<div class="container">
			<h1 class="mb-5 text-primary-theme">O nás</h1>
			<div class="row mb-5">
				<div class="col-md-6">
					<div class="row g-2">
						<div class="col-6">
							<img src="https://placehold.co/400x300/0F4953/ffffff?text=Tým+1" class="img-fluid rounded shadow-sm" alt="Tým 1">
						</div>
						<div class="col-6">
							<img src="https://placehold.co/400x300/F98E6E/ffffff?text=Tým+2" class="img-fluid rounded shadow-sm" alt="Tým 2">
						</div>
						<div class="col-12 mt-2">
							<img src="https://placehold.co/800x400/CBF5EF/0F4953?text=Naše+kancelář" class="img-fluid rounded shadow-sm" alt="Tým 3">
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<h3 class="mb-4 text-primary-theme">Často kladené dotazy</h3>
					<div class="accordion" id="faqAccordion">
						{faqs.map((faq, i) => (
							<div class="accordion-item border-0 mb-2 shadow-sm">
								<h2 class="accordion-header" id={`heading${i}`}>
									<button class="accordion-button collapsed rounded bg-accent-theme text-primary-theme fw-bold" type="button" data-bs-toggle="collapse" data-bs-target={`#collapse${i}`} aria-expanded="false" aria-controls={`collapse${i}`}>
										{faq.q}
									</button>
								</h2>
								<div id={`collapse${i}`} class="accordion-collapse collapse" aria-labelledby={`heading${i}`} data-bs-parent="#faqAccordion">
									<div class="accordion-body bg-white">
										{faq.a}
									</div>
								</div>
							</div>
						))}
					</div>
				</div>
			</div>

			<section class="py-5 border-top">
				<h2 class="text-center mb-5 text-primary-theme">Napsali o nás / Jsme v médiích</h2>
				<div class="row text-center g-4">
					<div class="col-md-3">
						<div class="p-3 border rounded bg-highlight-theme fw-bold">Hospodářské noviny</div>
					</div>
					<div class="col-md-3">
						<div class="p-3 border rounded bg-accent-theme fw-bold">Forbes</div>
					</div>
					<div class="col-md-3">
						<div class="p-3 border rounded bg-highlight-theme fw-bold">CzechCrunch</div>
					</div>
					<div class="col-md-3">
						<div class="p-3 border rounded bg-accent-theme fw-bold">Lupa.cz</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</BaseLayout>
